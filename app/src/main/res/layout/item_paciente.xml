<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    tools:context=".ListadoPacientesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Nombre del Paciente -->
        <TextView
            android:id="@+id/tvNombrePaciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre del Paciente"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"/>

    
        <TextView
            android:id="@+id/tvDniPaciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="6dp"
            android:text="DNI: 12345678"
            android:textColor="#555555"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNombrePaciente" />

        <TextView
            android:id="@+id/tvFechaIngreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="6dp"
            android:text="Ingreso: 01/01/2024"
            android:textColor="#555555"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDniPaciente" />

        <TextView
            android:id="@+id/tvSintomasPaciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"
            android:text="Síntomas"
            android:textColor="#555555"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFechaIngreso" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            app:layout_constraintTop_toBottomOf="@id/tvSintomasPaciente"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"/>

        <!-- Botón Dar de Alta -->
        <Button
            android:id="@+id/btnDarAlta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dar de Alta"
            app:layout_constraintTop_toBottomOf="@id/tvSintomasPaciente"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
